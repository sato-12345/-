<div class="container pt-3">
  <!-- メッセージ表示エリア -->
  <div class="alert-container">
    <% if flash[:notice] %>
      <div class="alert alert-success">
        <%= flash[:notice] %>
      </div>
    <% end %>
  </div>
  <!-- 掲示板一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @posts.present? %>
          <%= render @posts %>
        <% else %>
          <div class="mb-3">掲示板がありません</div>
        <% end %>
      </div>
    </div>
  </div>
  <!-- ログインしている場合のみ「新規投稿」ボタンを表示 -->
  <% if logged_in? %>
    <div class="input-group-append">
      <%= link_to t("新規投稿"), new_post_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
<%= paginate @posts %>
