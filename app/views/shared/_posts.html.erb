<% @posts.each do |post| %>  <!-- @postsをループで回して各postを扱う -->
  <div class="col-sm-12 col-lg-4 mb-3">
    <div id="post-id-<%= post.id %>">
      <div class="card">
        <%= image_tag "post_placeholder.png", class: "card-img-top", width: "300", height:"200" %>
        <div class="card-body">
          <div class="d-flex">
            <!-- 他の投稿に関連する内容をここに追加 -->
            <h4 class="card-title">
              <%= link_to post.title, '#' %>
            </h4>
            <div class='ms-auto'>
              <%= link_to '#', id: 'button-edit-#{post.id}' do %>
                <i class="bi bi-pencil-fill"></i>
              <% end %>
              <%= link_to '#', id: 'button-delete-#{board.id}', method: :delete, data: {confirm: ''} do %>
                <i class="bi bi-trash-fill"></i>
              <% end %>
            </div>
          </div>
          <ul class="list-inline">
            <li><i class="bi bi-person"></i><%= post.user.decorate.full_name %></li>
            <li><i class="bi bi-calendar"></i><%= l post.created_at, format: :short %></li>
          </ul>
          <p class="card-text"><%= post.body %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>  <!-- ループ終了 -->
