<!-- @ postsをループで回して各postを扱う -->
<% @posts.each do |post| %>
  <div class="col-sm-12 col-lg-4 mb-3">
    <div id="post-id-<%= post.id %>">
      <div class="card">
        <%= image_tag "post_placeholder.png", class: "card-img-top", width: "300", height:"200" %>
        <div class="card-body">
          <div class="d-flex">
            <!-- 他の投稿に関連する内容をここに追加 -->
            <h4 class="card-title">
              <%= link_to post.title, '#' %>
            </h4>
            <div class='ms-auto'>
              <%= link_to '#', id: 'button-edit-#{post.id}' do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-500" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M17.414 2.586a2 2 0 00-2.828 0l-10 10V16h3.414l10-10a2 2 0 000-2.828zM15 5l-3 3-3-3L12 2l3 3z"/>
                </svg>
              <% end %>
              <%= link_to '#', id: 'button-delete-#{board.id}', method: :delete, data: {confirm: ''} do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-500" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M5 4h10l1 1h3v1H3V5h3l1-1zm0 2v10h10V6H5z" clip-rule="evenodd"/>
                </svg>
              <% end %>
            </div>
          </div>
          <ul class="list-inline">
            <li><i class="bi bi-person"></i><%= post.user.decorate.full_name %></li>
            <li><i class="bi bi-calendar"></i><%= l post.created_at, format: :short %></li>
          </ul>
          <p class="card-text"><%= post.body %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>  <!-- ループ終了 -->
