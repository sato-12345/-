<div class="container">
  <div class="row">
    <div class="">
      <h1>ログイン</h1>
      <%= form_with url: login_path do |f| %>
        <div class="mb-3">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      <% end %>
      <div class="">
        <%= link_to "新規登録ページへ", new_user_path, class: "" %>
        <%# <%= link_to "パスワードをお忘れの方はこちら", "#", class: "" %>
      </div>
    </div>
  </div>
</div>
